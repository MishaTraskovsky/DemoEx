<Page x:Class="TRPO_WPF_app.pageWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_WPF_app"
      mc:Ignorable="d" 
      d:DesignHeight="470" d:DesignWidth="420"
      Title="pageWelcome">

    <Grid Width="420" Height="440">
        <Border Width="400" Height="430"  VerticalAlignment="Center" CornerRadius="20" Margin="10,5" Background="#ffffff" Padding="15">
            <TextBlock Text="Добро пожаловать в Cистему учета успеваемости студентов" FontSize="22" TextWrapping="Wrap"  FontFamily="Segoe Print" TextAlignment="Center" Margin="0,0,0,286"/>
        </Border>
        <TextBlock Text="Войти как:" FontSize="20" TextWrapping="Wrap"  FontFamily="Segoe Print" TextAlignment="Center" Height="50" Margin="0,188,0,202"/>

        <Button Height="55" Width="150" Content="Преподаватель" Margin="203,255,62,130" Click="TeachClick"/>
        <Button Height="55" Width="104" Content="Студент" Margin="73,255,238,130" Click="StudentClick"/>
        <Button Width="130" Content="Регистрация" HorizontalAlignment="Center" Margin="144,324,141,57" Click="RegClick"/>
    </Grid>
</Page>
